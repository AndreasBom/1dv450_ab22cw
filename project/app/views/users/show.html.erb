
<div class="name_and_avatar">
  <%= gravatar_for @user %>
  <div class="name_field">
    <h1 class="bottom">
      <%= @user.first_name %> <%= @user.last_name %>
    </h1>
  </div>
</div>
<hr/>
<div id="api_section" class="">
  <h4>Registrerade applikationer</h4>

  <% if current_user.email == @user.email %>
    <%= link_to "LÃ¤gg till", new_user_api_path(current_user), class: "btn btn-xs btn-default" %>
  <% end %>

  <table class="table table-striped">
    <tr>
      <th>App</th>
      <th>Nyckel</th>
      <th></th>
        <% @api.each do |a| %>
          <tr>
            <td><%= a.application %></td>
            <td><%= a.key %></td>
            <td> <%= link_to "Ta bort", user_api_path(@user.id, a.id)%> </td>
        <% end %>
    </tr>
  </table>
</div>

